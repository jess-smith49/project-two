  <button onclick="window.location.href='/dashboard'">Return to Dashboard</button>
  <button onclick="window.location.href='/dashboard/lists'">Return to Lists</button>
</div>

<section class="db-groups">
  <div class="card-group">
    <h2>My Wishlist</h2>
  </div>
  {{#each lists as |list|}}
  <div class="card">
    <div class="card-title">
      <h3>
        <a href='/api/lists/edit/{{id}}'>{{this.list_name}}</a></h3>
    </div>
    <div class="card-body">
      <p>{{this.list_items}}</p>
    </div>
  </div>
  {{/each}}
</section>

